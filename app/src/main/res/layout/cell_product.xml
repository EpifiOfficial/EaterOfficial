<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/CvProductIv"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            app:cardCornerRadius="1dp"
            >

            <ImageView
                android:id="@+id/IvProduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFEB3B"

                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/TvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product name"
            android:layout_toRightOf="@id/CvProductIv"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/TvProductDesc"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore"
            android:maxLines="3"
            android:layout_below="@id/TvProductName"
            android:layout_toRightOf="@id/CvProductIv"
            android:fontFamily="@font/nunito_sans"
            android:textColor="#bdbdbd"
            android:textSize="10sp"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/TvProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100€"
            android:textColor="#00836F"
            android:textSize="16sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:layout_marginTop="7dp"
            />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/CvPortraitMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/CvProductIvPM"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/background_rounded_top_corners"
                >

                <ImageView
                    android:id="@+id/IvProductPM"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFEB3B"

                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/TvProductNamePM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product name"
                android:layout_below="@id/CvProductIvPM"
                android:fontFamily="@font/nunito_sans_semibold"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/TvProductPricePM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100€"
                android:textColor="#00836F"
                android:textSize="18sp"
                android:layout_below="@id/TvProductNamePM"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/nunito_sans_bold"

                />
            <TextView
                android:id="@+id/TvProductDescPM"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore"
                android:maxLines="3"
                android:layout_below="@id/TvProductPricePM"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:fontFamily="@font/nunito_sans"
                android:textColor="#bdbdbd"
                android:textSize="14sp"
                android:layout_marginBottom="20dp"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>